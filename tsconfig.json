{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": ["js/**/*.ts", "js/**/*.js", "js/**/*.svelte"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
